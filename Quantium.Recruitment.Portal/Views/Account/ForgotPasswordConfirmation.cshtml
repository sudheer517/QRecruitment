@{
    ViewData["Title"] = "Forgot Password Confirmation";
}

<style>
    .login-page-container {
        height: 100%;
        width: 100%;
        display: flex;
        justify-content: center;
        align-items: center;
        flex-direction: column;
    }

    .login-container {
        flex: 0 1 auto;
        max-height: 700px;
        background: rgba(248, 240, 240, 0.91);
        min-height: 200px;
        display: flex;
        flex-direction: column;
    }

    .login-form {
        display: flex;
        justify-content: center;
        align-items: center;
    }

</style>


<div class="login-page-container">
    <div class="row justify-content-center align-items-center" style="margin-top: 10px; margin-bottom: 10px">
        <div class="quantium-white-logo">
            <img src="~/dist/assets/img/quantium-white.svg" alt="Microsoft" style="height: 100px" />
        </div>
    </div>
    <div class="login-container col-lg-8 col-md-10">

        <div>
            <h4 style="text-align:center; margin-top: 10px">@ViewData["Title"]</h4>
            <hr />
            <div class="row justify-content-center">
                <div class="col-md-10 col-lg-6">
                    <p style="text-align: center">
                        @ViewData["Message"]
                    </p>
                </div>
            </div>
            <div class="row justify-content-center" style="margin-top: 20px">
                <a href="/" class="btn">Back to login</a>
            </div>
        </div>
    </div>
    <div class="row justify-content-center align-items-center hidden-sm-down" style="margin-top: auto; color: whitesmoke">
        <div>
            <h6 style="text-align:center"><i class="fa fa-copyright"></i>2017 Quantium</h6>
            <h6>wwww.quantium.com</h6>
        </div>
    </div>
</div>

